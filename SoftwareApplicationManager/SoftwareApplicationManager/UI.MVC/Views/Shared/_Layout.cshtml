<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] | Software Application Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700&family=Montserrat:wght@100;200;300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>


<input type="checkbox" class="hidden" id="toggleNav">

<div class="inner-header">
    <label for="toggleNav" class="label-burger-menu"> <i class="fas fa-bars burger-menu"></i> </label>
</div>

@{
    string controller = (ViewContext.RouteData.Values["Controller"] ?? "").ToString();
    string action = (ViewContext.RouteData.Values["Action"] ?? "").ToString();
}

<header class="main-header">
    <nav class="main-nav">
        <ul class="main-nav-list">
            <li class="main-nav-list-item"> <a class="main-nav-link @((controller == "Home"                 && action == "Index")   ? "main-nav-link-active" : "")" asp-area="" asp-controller="Home"                   asp-action="Index">Home</a> </li>
            <li class="main-nav-list-item"> <a class="main-nav-link @((controller == "SoftwareApplication"  && action == "Index")   ? "main-nav-link-active" : "")" asp-area="" asp-controller="SoftwareApplication"    asp-action="Index">Application Overview</a> </li>
            <li class="main-nav-list-item"> <a class="main-nav-link @((controller == "SoftwareApplication"  && action == "Add")     ? "main-nav-link-active" : "")" asp-area="" asp-controller="SoftwareApplication"    asp-action="Add">Add Application</a></li>
            <li class="main-nav-list-item"> <a class="main-nav-link @((controller == "Developer"            && action == "Index")   ? "main-nav-link-active" : "")" asp-area="" asp-controller="Developer"              asp-action="Index">Developers</a> </li>
            <li class="main-nav-list-item"> <a class="main-nav-link @((controller == "Home"                 && action == "Privacy") ? "main-nav-link-active" : "")" asp-area="" asp-controller="Home"                   asp-action="Privacy">Privacy</a> </li>
        </ul>
    </nav>
</header>

<div class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Modal title</h5>
                <button type="button" class="close modalClose" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="modalMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success modalClose">Close</button>
            </div>
        </div>
    </div>
</div>


<main>
    <article class="content">
        @RenderBody()
    </article> 

    <footer class="main-footer">
        <p> <a href="#" class="other-links">Niels Van Steen</a></p>
        <p>-</p>
        <p><a class="other-links other-link-2" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
        <p>-</p>
        <p>&copy; <span class="footer-span-year"></span></p>
    </footer>
</main>




<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>